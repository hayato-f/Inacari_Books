<h1>ユーザー編集</h1>

<% if @user.errors.present? %>
  <ul class="error_messages">
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="form-wrapper">
  <%= form_with model: @user, local: true do |f| %>
    <div class="form-group">
      <%= f.label :icon, 'アイコン'%>
      <%= f.file_field :icon, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :name, '名前'%>
      <%= f.text_field :name, class: 'form-control'%>
    </div>
    <div class="form-group col">
      <%= f.label :account_name, 'アカウント名'%>
      <%= f.text_field :account_name, class: 'form-control'%>
    </div>
    <div class="form-group mb-3">
      <%= f.label :email, 'メールアドレス'%>
      <%= f.text_field :email, class: 'form-control'%>
    </div>
    <div class="form-group mb-3">
      <%= f.label :tel, '電話番号'%>
      <%= f.telephone_field :tel, placeholder: "ハイフンなし", class: 'form-control'%>
    </div>
    <div class="form-group mb-3">
      <%= f.label :shipping_address, '住所'%>
      <%= f.text_field :shipping_address, class: 'form-control'%>
    </div>
    
    <div class="form-group mb-3">
      <%= f.label :password, 'パスワード'%>
      <%= f.password_field :password, class: 'form-control'%>
    </div>
    <div class="form-group mb-3">
      <%= f.label :password_confirmation, 'パスワード(確認)'%>
      <%= f.password_field :password_confirmation, class: 'form-control'%>
    </div>
    <%= f.submit '変更する', class: 'btn btn-primary' %>
  <% end %>
</div>
