<h1>書籍登録</h1>

<% if @book.errors.present? %>
  <ul class="error_messages">
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="form-wrapper">
  <%= form_with model: @book, local: true do |f| %>
    <div class="form-group">
      <%= f.label :title, 'タイトル'%>
      <%= f.text_field :title, class: 'form-control'%>
    </div>
    <div class="form-group col">
      <%= f.label :product_condition, '状態'%>
      <%= f.text_field :product_condition, class: 'form-control'%>
    </div>
    <div class="form-group mb-3">
      <%= f.label :description, '説明'%>
      <%= f.text_area :description, size: "70x5", class: 'form-control'%>
    </div>
    <div class="form-group mb-3">
      <%= f.label :price, '価格'%>
      <%= f.number_field :price, class: 'form-control'%>
    </div>
    <div class="form-group mb-3">
      <%= f.label :postage, '送料'%>
      <%= f.number_field :postage, class: 'form-control'%>
    </div>
    <div class="form-group mb-3">
      <%= f.label :published, '公開'%>
      <%= f.check_box :published, :as => :boolean, :checked => "checked", class: 'form-control'%>
    </div>
    <%= f.hidden_field :seller_id, :value =>current_user.id %>
    <%= f.submit '登録する', class: 'btn btn-primary' %>
  <% end %>
</div>